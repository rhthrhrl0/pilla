        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/mainColor</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@drawable/confirm_btn</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/mainColor</item>
        <item name="colorControlHighlight">@color/mainColor</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/mainColor</item>
    </style>
</resources>